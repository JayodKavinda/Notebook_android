<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    android:layout_gravity="top|center"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:text="Sort By"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/radio_group_sort"
   >
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTitle"
        android:text="Title"

        android:buttonTint="#000"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data created"
        android:buttonTint="#000"
        android:id="@+id/btnDataCreated"
        android:layout_marginLeft="30dp"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data modified"
        android:id="@+id/btnDatamodified"
        android:buttonTint="#000"
        android:layout_marginLeft="30dp"/>


</RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/orderTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="Order"
                android:layout_centerVertical="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_height="5dp"
                android:layout_toEndOf="@id/orderTxt"
                android:background="@drawable/dotted_line"/>

        </RelativeLayout>




        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_group_sort_order"            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnAsce"
                android:text="Ascending"

                android:buttonTint="#000"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descending"
                android:id="@+id/btnDesc"
                android:buttonTint="#000"
                android:layout_marginLeft="30dp"/>


        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:paddingStart="20dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ok"
                android:id="@+id/okSort"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"



                android:layout_alignParentEnd="true"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/cancelSort"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"



                android:layout_alignParentEnd="true"/>

        </LinearLayout>




    </LinearLayout>
</com.google.android.material.card.MaterialCardView>